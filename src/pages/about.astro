---
// src/pages/about.astro
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="About">

  <section class="about-section">
    <h1>About</h1>
    <p class="about-subtitle">Cyber Security Researcher | Penetration Tester</p>
    <p>
      [TODO: Write your full professional bio here. Expand on the homepage blurb. 
      Talk about your specialization, your current focus (e.g., AppSec, AD Pentesting), 
      and any key professional philosophies you have.]
    </p>
    <a href="mailto:[YOUR_EMAIL@HERE.COM]" class="hire-button">Hire Me</a>
  </section>

  <section class="home-section">
    <h2>Certifications</h2>
    <div class="cert-grid">
      <div class="cert-card">
        <img src="https://placehold.co/80x80/272727/F4F4F4?text=OSCP" alt="OSCP Logo" class="cert-logo" />
        <div class="cert-info">
          <h3 class="cert-title">OSCP</h3>
          <p class="cert-subtitle">Offensive Security Certified Professional</p>
        </div>
      </div>
      <div class="cert-card">
        <img src="https://placehold.co/80x80/272727/F4F4F4?text=eJPT" alt="eJPT Logo" class="cert-logo" />
        <div class="cert-info">
          <h3 class="cert-title">eJPT</h3>
          <p class="cert-subtitle">Junior Penetration Tester</p>
        </div>
      </div>
    </div>
  </section>

  <section class="home-section">
    <h2>Social Networks</h2>
    <div class="social-grid">
      <a href="https://github.com/MMGehrke" target="_blank" rel="noopener noreferrer" class="social-card">
        <strong>GitHub</strong>
        <span>MMGehrke</span>
      </a>
      <a href="https://www.linkedin.com/" target="_blank" rel="noopener noreferrer" class="social-card">
        <strong>LinkedIn</strong>
        <span>[Your-LinkedIn-Username]</span>
      </a>
    </div>
  </section>

</MainLayout>

<style>
  /* --- About Section --- */
  .about-section {
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 4rem;
    padding-bottom: 3rem;
  }

  .about-section h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .about-subtitle {
    font-family: var(--font-sans);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--heading-color);
    margin-bottom: 1.5rem;
  }

  .hire-button {
    display: block;
    width: fit-content;
    margin: 2rem auto 0 auto;
    font-family: var(--font-sans);
    font-weight: 600;
    background-color: #6B6B6B;
    color: var(--heading-color);
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .hire-button:hover {
    opacity: 0.85;
  }

  /* --- Shared Section Styles --- */
  .home-section {
    margin-bottom: 4rem;
  }

  .home-section h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.75rem;
  }

  /* --- Certifications Grid --- */
  .cert-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .cert-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background-color: #1A1A1A; /* Slightly lighter than bg */
    border: 1px solid var(--border-color);
    padding: 1.5rem;
    border-radius: 8px;
  }

  .cert-logo {
    width: 60px;
    height: 60px;
    border-radius: 4px;
  }

  .cert-title {
    font-family: var(--font-sans);
    font-size: 1.1rem;
    color: var(--heading-color);
    margin-bottom: 0.25rem;
  }

  .cert-subtitle {
    font-family: var(--font-serif);
    color: var(--text-color);
    font-size: 0.9rem;
    margin: 0;
  }

  /* --- Socials Grid --- */
  .social-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Two columns */
    gap: 1.5rem;
  }

  .social-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-card:hover {
    border-color: var(--heading-color);
    background-color: #1A1A1A;
  }

  .social-card strong {
    font-family: var(--font-sans);
    font-weight: 600;
    color: var(--heading-color);
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .social-card span {
    font-family: var(--font-sans);
    color: var(--text-color);
    font-size: 0.9rem;
  }

  /* Responsive behavior for smaller screens */
  @media (max-width: 640px) {
    .social-grid {
      grid-template-columns: 1fr;
    }

    .cert-card {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
