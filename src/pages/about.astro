---
// src/pages/about.astro
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="About">

  <section class="about-section">
    <h1>About</h1>
    <p class="about-subtitle">Full Stack Developer | Cybersecurity Enthusiast</p>
    <p>
      I spent 4 years working in trauma 1 acute care rehab, learning how to collaborate with multiple teams under the most stressful conditions. After working in a busy hospital I came home everyday and spent time learning programming and software engineering. Python, AWS, Terraform, SQL, GRC, etc. If I don't know how to fix a problem, give me an hour and I can learn.
    </p>
    <a href="/MacoyG.pdf" class="hire-button" target="_blank" rel="noopener noreferrer">Hire Me</a>
  </section>

  <section class="home-section">
    <h2>Certifications</h2>
    <div class="cert-grid">
      <div class="cert-card">
        <img src="/iso-27001-cert.png" alt="ISO 27001 Logo" class="cert-logo" />
        <div class="cert-info">
          <h3 class="cert-title">ISO 27001 Lead Auditor</h3>
          <p class="cert-subtitle">Information Security Management Systems</p>
        </div>
      </div>
      <div class="cert-card">
        <img src="/comptia-security-plus.jpg" alt="CompTIA Security+ Logo" class="cert-logo" />
        <div class="cert-info">
          <h3 class="cert-title">CompTIA Security+ Certified</h3>
          <p class="cert-subtitle">Cybersecurity Foundation</p>
        </div>
      </div>
    </div>
  </section>

  <section class="home-section">
    <h2>Social Networks</h2>
    <div class="social-grid">
      <a href="https://github.com/MMGehrke" target="_blank" rel="noopener noreferrer" class="social-card">
        <strong>GitHub</strong>
        <span>MMGehrke</span>
      </a>
      <a href="https://www.linkedin.com/in/macoy-gehrke/" target="_blank" rel="noopener noreferrer" class="social-card">
        <strong>LinkedIn</strong>
        <span>macoy-gehrke</span>
      </a>
    </div>
  </section>

</MainLayout>

<style>
  /* --- About Section --- */
  .about-section {
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 4rem;
    padding-bottom: 3rem;
  }

  .about-section h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .about-subtitle {
    font-family: var(--font-sans);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--heading-color);
    margin-bottom: 1.5rem;
  }

  .hire-button {
    display: block;
    width: fit-content;
    margin: 2rem auto 0 auto;
    font-family: var(--font-sans);
    font-weight: 600;
    background-color: #6B6B6B;
    color: var(--heading-color);
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .hire-button:hover {
    opacity: 0.85;
  }

  /* --- Shared Section Styles --- */
  .home-section {
    margin-bottom: 4rem;
  }

  .home-section h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.75rem;
  }

  /* --- Certifications Grid --- */
  .cert-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .cert-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background-color: #1A1A1A; /* Slightly lighter than bg */
    border: 1px solid var(--border-color);
    padding: 1.5rem;
    border-radius: 8px;
  }

  .cert-logo {
    width: 60px;
    height: 60px;
    border-radius: 4px;
    object-fit: contain;
    background-color: transparent;
  }

  .cert-title {
    font-family: var(--font-sans);
    font-size: 1.1rem;
    color: var(--heading-color);
    margin-bottom: 0.25rem;
  }

  .cert-subtitle {
    font-family: var(--font-serif);
    color: var(--text-color);
    font-size: 0.9rem;
    margin: 0;
  }

  /* --- Socials Grid --- */
  .social-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Two columns */
    gap: 1.5rem;
  }

  .social-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-card:hover {
    border-color: var(--heading-color);
    background-color: #1A1A1A;
  }

  .social-card strong {
    font-family: var(--font-sans);
    font-weight: 600;
    color: var(--heading-color);
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .social-card span {
    font-family: var(--font-sans);
    color: var(--text-color);
    font-size: 0.9rem;
  }

  /* Responsive behavior for smaller screens */
  @media (max-width: 640px) {
    .social-grid {
      grid-template-columns: 1fr;
    }

    .cert-card {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
