---
// src/components/Header.astro
---

<header class="site-header">
  <nav class="nav-container">
    <a href="/" class="nav-logo">Macoy Gehrke</a>
    <div class="nav-links">
      <a href="/about">About</a>
      <a href="/blog">Blog</a>
    </div>
  </nav>
</header>

<style>
  .site-header {
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 4rem;
    padding: 1.5rem 0;
    font-family: var(--font-sans);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .nav-logo {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--heading-color);
    text-decoration: none;
  }

  .nav-logo:hover {
    color: var(--text-color);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    font-size: 1rem;
    color: var(--text-color);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--heading-color);
    text-decoration: none;
  }
</style>
